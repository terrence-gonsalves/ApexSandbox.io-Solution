public boolean isSorted(List<Integer> numbers) {
    Integer tempElement;
    Boolean sortAsc = false;
    Boolean sortDesc = false;
    if (numbers.size() < 3)  return true;

    for (Integer x = 0; x < numbers.size(); x++) {
        if (numbers.get(x) /* 0 */ >= tempElement /* 2 */) {
            sortAsc = true;
        } else {
            sortAsc = false;
        }
        
        if (numbers.get(x) <= tempElement) {
            sortDesc = true;
        } else {
            sortDesc = false;
        }

        tempElement = numbers.get(x); // 5
    }

    if (sortDesc || sortAsc) {
        return true;
    } 

    return false;
}