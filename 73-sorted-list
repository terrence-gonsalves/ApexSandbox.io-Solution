public boolean isSorted(List<Integer> numbers) {
    Integer tempElement;
    Boolean sortAsc = false;
    Boolean sortDesc = false;
    if (numbers.size() < 3)  return true;

    for (Integer x = 0; x < numbers.size() - 1; x++) {
        if (numbers.get(x) > numbers.get(x + 1)) {
            sortAsc = true;
        } 
    }

    for (Integer y = 0; y < numbers.size() - 1; x++) {
        if (numbers.get(y) > numbers.get(y + 1)) {
            sortDesc = true;
        }
    }

    if (sortDesc || sortAsc) {
        return true;
    } 

    return false;
}