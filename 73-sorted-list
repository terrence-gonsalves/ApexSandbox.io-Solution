public boolean isSorted(List<Integer> numbers) {
    Integer sortAsc = false, sortDesc = false;
    Integer tempNum = numbers.get(0);  

    if (numbers.size() < 3) {
        return true;
    }      

    for (Integer x = 1; x < numbers.size(); x++) {
        if (numbers.get(x) < tempNum) {
            sortDesc = true;
        }

        if (numbers.get(x) > tempNum) {
            sortAsc = true;
        }

        if (sortAsc || sortDesc) {
            return false;
        }

        tempNum = numbers.get(x);
    }

    return true;
}